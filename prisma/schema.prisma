generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Testimonial {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  profession  String
  company     String?
  relationship String
  comment     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isApproved  Boolean  @default(true)
}
